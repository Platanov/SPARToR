#Required packages:
#  libsdl1.2-dev
#  libsdl-net1.2-dev
#  libsdl-image1.2-dev
EXE_NAME = spartor_mac
OBJS = main.o font.o console.o command.o net.o host.o client.o input.o video.o mod.o tests.o
CC = gcc
FLAGS = -g -Wall
LIBS = spartor_mac.app/SDLmain.m -lm -framework SDL -framework SDL_net -framework SDL_image -framework Cocoa -Fspartor_mac.app/Contents/Frameworks
INC = -Ispartor_mac.app -Ispartor_mac.app/Contents/Frameworks/SDL.framework/Headers -Ispartor_mac.app/Contents/Frameworks/SDL_net.framework/Headers -Ispartor_mac.app/Contents/Frameworks/SDL_image.framework/Headers


$(EXE_NAME): $(OBJS)
	$(CC) -o $@ $(OBJS) $(FLAGS) $(INC) $(LIBS) $(XLIBS)
	mv spartor_mac spartor_mac.app/Contents/MacOS
	-rm $(OBJS)

$(OBJS):
	$(CC) -o $@ -c $(FLAGS) $(INC) $*.c

clean:
	-rm $(OBJS)
